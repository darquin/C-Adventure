        <Button Content="Exit to main menu" Height="70" HorizontalAlignment="Left" Margin="12,12,0,0" Name="buttonOptionQuitToMain" VerticalAlignment="Top" Width="254" Click="buttonOptionQuitToMain_Click" />
        <Button Content="Exit to desktop" Height="70" HorizontalAlignment="Left" Margin="12,92,0,0" Name="buttonOptionQuitToDesktop" VerticalAlignment="Top" Width="254" Click="buttonOptionQuitToDesktop_Click" />
        <Button Content="Return to the game" Height="72" HorizontalAlignment="Left" Margin="12,177,0,0" Name="buttonOptionReturnToGame" VerticalAlignment="Top" Width="254" Click="buttonOptionReturnToGame_Click" />
    </Grid>
